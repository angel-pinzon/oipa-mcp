# OIPA MCP Server Configuration Example
# Copy this file to .env and update with your actual values

# ====================
# Database Configuration
# ====================

# Traditional Oracle Connection
OIPA_DB_HOST=localhost
OIPA_DB_PORT=1521
OIPA_DB_SERVICE_NAME=OIPA
OIPA_DB_USERNAME=oipa_user
OIPA_DB_PASSWORD=your_password_here

# Connection Type: "traditional" or "cloud_wallet"
OIPA_DB_CONNECTION_TYPE=traditional

# Optional: Default Schema (if different from username)
# OIPA_DB_DEFAULT_SCHEMA=OIPA_SCHEMA

# Oracle Cloud Wallet Configuration (if using cloud_wallet)
# OIPA_DB_WALLET_LOCATION=/path/to/wallet
# OIPA_DB_WALLET_PASSWORD=wallet_password

# ====================
# Connection Pool Settings
# ====================
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=5
DB_POOL_TIMEOUT=30

# ====================
# MCP Server Configuration
# ====================
MCP_SERVER_NAME=oipa-mcp
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION=MCP Server for Oracle OIPA

# ====================
# Logging Configuration
# ====================
# Log Level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log Format: "json" or "text"
LOG_FORMAT=text

# Optional: Log file path
# LOG_FILE=/var/log/oipa-mcp/server.log

# ====================
# Performance Configuration
# ====================
# Cache TTL in seconds
CACHE_TTL=300

# Maximum query results
MAX_QUERY_RESULTS=1000

# Query timeout in seconds
QUERY_TIMEOUT=30

# ====================
# Web Service Configuration (Future Use)
# ====================
# OIPA_WS_ENDPOINT=http://your-oipa-server:8080/pas/services/FileReceived
# OIPA_WS_USERNAME=webservice_user
# OIPA_WS_PASSWORD=webservice_password

# HTTP/SOAP timeouts
# HTTP_TIMEOUT=30
# SOAP_TIMEOUT=60
# MAX_RETRIES=3

# SSL Configuration
# ENABLE_SSL=false
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ====================
# Feature Flags
# ====================
# Enable/disable specific features
ENABLE_CACHING=true
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_METRICS=false
ENABLE_HEALTH_CHECK=true

# ====================
# Development Settings
# ====================
# Set to "development" for development mode
ENVIRONMENT=production

# Enable debug mode (verbose logging)
DEBUG=false
