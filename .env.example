# OIPA Database Configuration
# Connection Type: Specifies how to connect to Oracle database
# Possible values:
#   - traditional: Standard Oracle connection (host:port/service)
#   - cloud_wallet: Oracle Cloud Wallet connection (Autonomous Database)
# Default: traditional (if not specified)
OIPA_DB_CONNECTION_TYPE=traditional

# For traditional Oracle connection
OIPA_DB_HOST=localhost
OIPA_DB_PORT=1521
OIPA_DB_SERVICE_NAME=OIPA
OIPA_DB_USERNAME=oipa_user
OIPA_DB_PASSWORD=your_password

# Schema Configuration
# Default schema to use when connecting to Oracle (optional)
# If specified, executes "ALTER SESSION SET CURRENT_SCHEMA = {schema_name}"
# This is useful when your user has access to multiple schemas but needs to default to a specific one
OIPA_DB_DEFAULT_SCHEMA=OIPA_PREPROD_1

# For Oracle Cloud Wallet connection (set CONNECTION_TYPE=cloud_wallet)
# OIPA_DB_WALLET_LOCATION=/path/to/wallet
# OIPA_DB_WALLET_PASSWORD=wallet_password_if_required
# OIPA_DB_SERVICE_NAME=vitalnprod_high
# OIPA_DB_CONNECTION_TYPE=cloud_wallet

# Common Service Names for Oracle Autonomous Database:
#   - {db_name}_high: High priority, parallel execution
#   - {db_name}_medium: Medium priority, limited parallelism  
#   - {db_name}_low: Low priority, serial execution
#   - {db_name}_tp: Transaction processing
#   - {db_name}_tpurgent: Transaction processing urgent

# OIPA Web Service Configuration  
OIPA_WS_ENDPOINT=http://oipa-server:8080/pas/services/FileReceived
OIPA_WS_USERNAME=webservice_user
OIPA_WS_PASSWORD=your_ws_password

# MCP Server Configuration
MCP_SERVER_NAME=oipa-mcp
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION="MCP Server for Oracle OIPA integration"

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/oipa-mcp.log

# Connection Pool Settings
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=10
DB_POOL_TIMEOUT=30

# SOAP/HTTP Settings
HTTP_TIMEOUT=30
SOAP_TIMEOUT=60
MAX_RETRIES=3

# Security Settings
ENABLE_SSL=false
SSL_CERT_PATH=""
SSL_KEY_PATH=""

# Performance Settings
CACHE_TTL=300
MAX_QUERY_RESULTS=1000
QUERY_TIMEOUT=30

# Feature Flags
ENABLE_PUSH_FRAMEWORK=true
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_MONITORING=true
